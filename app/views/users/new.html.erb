<h1>新規登録</h1>
<%= form_with(model: @user, local: true) do |f| %>
  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <%= f.label :name,'Name' %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email,'Email' %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password,'Password' %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.submit 'Sign up'%>
  </div>


<% end %>

<p>User? <%= link_to 'Log in!', login_path %></p>